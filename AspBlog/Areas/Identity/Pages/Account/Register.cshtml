@page
@model RegisterModel

@{
    Layout = "/Views/Shared/_LayoutNoNav.cshtml";
    ViewData["Title"] = "Zaregistrovať sa";
}

<div class="row justify-content-center mt-5 mb-4">
    <div class="col-sm-8 col-md-5 col-lg-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="box box-auth px-4 py-5">

            <h2 class="box-auth-heading pb-3">
                @ViewData["Title"]
            </h2>

            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="Input.Email" class="form-control" placeholder="E-mailová adresa" autofocus required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <input asp-for="Input.Password" class="form-control mt-2" placeholder="Heslo" required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <input asp-for="Input.ConfirmPassword" class="form-control mt-2" placeholder="Zopakujte heslo" required />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <button type="submit" class="btn btn-lg btn-primary btn-block mt-4">@ViewData["Title"]</button>

            <p class="alt-action text-center mt-3">
                Máte už účet? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Prihláste sa</a>
            </p>

        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
