@model AspBlog.Models.Post

@{
    ViewData["Title"] = "Vytvoriť príspevok";

}

<section class="box p-4">

    <form asp-action="Create" class="post" id="add-form">


        <header class="post-list pb-3">
            <h1 class="box-heading text-muted">@ViewData["Title"]</h1>
        </header>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group">
            <span asp-validation-for="Title" class="text-danger"></span>
            <input type="text" name="title" class="form-control" placeholder="Nadpis príspevku" />
        </div>

        <div class="form-group">
            <span asp-validation-for="Text" class="text-danger"></span>
            <textarea name="text" class="form-control" placeholder="Text príspevku..." rows="16"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Vytvoriť</button>

            <span class="or">
                alebo <a href="/">späť domov</a>
            </span>

        </div>

    </form>

</section>

